  <div class="show_tweet">
 
    <div class="container">
      <div class="row">
        <div class="col-md-12">
 					 
        	 <%=   image_tag  @new_tweet.image_url unless @new_tweet.image.blank?    %> 
					<p>
					  <strong>Content:</strong>
					  <%= @new_tweet.content %>
					</p>
						<% if user_signed_in? %>
							<% if @new_tweet.user_id == current_user.id %>
								<%= link_to 'Edit', edit_new_tweet_path(@new_tweet) %> |
								<%= link_to 'Back', new_tweets_path %>
							<% end %>
						<% end %>
       </div> 
  	</div>
  </div> 
</div>
