<div class="latest_blog">
	<div class="container">
		<h3 class="style_title">Latest Blog</h3>
			<div class="row">
				 
					  <% @blogs.last(3).each do |blog| %>
              <div class="col-md-4">
              	<div class="blog_image">
              		<%=image_tag  blog.image_url unless blog.image.blank?    %> 
             	 	</div>  
             		<h5><%= link_to blog.title, blog_path(blog) %></h5>  
								  
               </div>
          <% end %>
				 
			</div>
	</div>
</div>