 <div class="all_blog">
 
    <div class="container">
      <div class="row">
      
          <% @blogs.each do |blog| %>
             <div class="col-md-3">
              <div class="blog_image">
              <%=   image_tag  blog.image_url unless blog.image.blank?    %> 
              </div>

             <h5><%= link_to blog.title,  blog_path(blog)  %></h5> 
                 
               </div>
          <% end %>
     
    
  </div>
  </div> 
</div>

 